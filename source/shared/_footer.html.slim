footer
  .wrapper
    strong = t 'footer.copyright'
    address = t 'address'
    
    ul.flat
      - t('footer.list').each do |id, footer|
        li
          = link_to "#{id}", class: "#{id}"
            = footer[:title]
    ul.social
      - t('footer.social').each do |id, footer|
        li
          = link_to footer[:url], class: "#{id}"
            = image_tag "images/icons/#{id}.svg"
    
